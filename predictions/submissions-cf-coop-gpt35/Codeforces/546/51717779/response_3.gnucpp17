#include <iostream>

int main() {
  int k, n, w;
  std::cin >> k >> n >> w;

  // Calculate the sum of an arithmetic progression
  int sum = w * (w + 1) / 2;

  // Calculate the total cost
  int totalCost = sum * k;

  // Check if the total cost is greater than n
  int difference = (totalCost <= n) ? 0 : (totalCost - n);

  std::cout << difference;

  return 0;
}