#include <iostream>

int main() {
  int d = 0;
  std::cin >> d;

  int k = 0;
  std::cin >> k;

  int n = 0;
  std::cin >> n;

  // Calculate the sum of the first n natural numbers
  n = (n * (n + 1)) / 2;

  // Multiply the sum by d
  n = n * d;

  // Print the maximum of 0 and (n - k)
  std::cout << std::max(0, n - k);

  return 0;
}