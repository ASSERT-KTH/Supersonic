#include <iostream>
#include <cmath>
using namespace std;

int main() {
  ios_base::sync_with_stdio(false);
  cin.tie(NULL);
  cout.tie(NULL);
  
  int t = 1;
  cin >> t;
  
  while (t--) {
    long long x;
    cin >> x;
    
    long long moves = ceil((-1 + sqrt(1 + 8 * x)) / 2);
    
    cout << moves << endl;
  }
}