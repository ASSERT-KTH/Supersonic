#include <iostream>
using namespace std;

int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    cout.tie(NULL);
    
    int n, k;
    cin >> n >> k;

    if (k <= (n + 1) / 2) {
        cout << 2 * k - 1 << endl;
    } else {
        cout << 2 * (k - n / 2) << endl;
    }

    return 0;
}