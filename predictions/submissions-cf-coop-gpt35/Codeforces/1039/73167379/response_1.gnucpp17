void RIP_PAPA(int v, int p) {
  for (int q = 0; q < l[v].size(); q++) {
    if (l[v][q] == p) {
      l[v].erase(l[v].begin() + q);
      break;
    }
  }
  for (int h : l[v])
    RIP_PAPA(h, v);
}

int eba = 0;
void rnm(int v) {
  zam[v] = eba++;
  deque<int> dq = {v};
  for (; dq.size();) {
    int x = dq[0];
    dq.pop_front();
    for (int h : l[x]) {
      if (zam[h] != -1)
        continue;
      dq.push_back(h);
      zam[h] = eba++;
    }
  }
}

