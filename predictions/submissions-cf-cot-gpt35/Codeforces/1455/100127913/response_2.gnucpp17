#pragma GCC optimize "trapv"
#include <iostream>
#include <cmath>
using namespace std;

int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    cout.tie(NULL);

    int t = 1;
    cin >> t;
    while (t--) {
        long long x;
        cin >> x;
        long long moves = ceil(sqrt(2*x + 0.25) - 0.5);
        cout << moves << endl;
    }

    return 0;
}