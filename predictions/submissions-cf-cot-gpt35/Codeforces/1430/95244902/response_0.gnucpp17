#include <iostream>
using namespace std;

int main() {
  ios::sync_with_stdio(0);
  cin.tie(0);

  int t, a, x, o;
  cin >> t;
  while (t--) {
    cin >> a;
    o = 1;
    cout << 2 << endl;
    x = (a + a) / 2;
    cout << a << " " << a - 1 << endl;
    for (int i = a - 2; i >= 1; i--) {
      cout << x << " " << i << endl;
      x = (x + i + 1) / 2;
    }
  }

  return 0;
}