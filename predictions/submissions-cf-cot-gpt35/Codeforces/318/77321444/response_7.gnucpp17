#include <iostream>
using namespace std;

int main() {
  ios_base::sync_with_stdio(false);
  cin.tie(NULL);
  
  int t = 1;
  while (t--) {
    int n, k;
    cin >> n >> k;
    
    int result;
    if (n % 2 == 0) {
      result = 2 * (k - n / 2);
    } else {
      result = 2 * k - 1;
    }
    
    cout << result << endl;
  }
  
  return 0;
}