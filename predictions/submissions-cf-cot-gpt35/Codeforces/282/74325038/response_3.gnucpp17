#include <iostream>
using namespace std;

int main() {
  int n, s = 0;
  cin >> n;
  for (int i = 0; i < n; i++) {
    char op;
    cin >> op;
    switch (op) {
      case '++':
      case 'X++':
        s++;
        break;
      case '--':
      case 'X--':
        s--;
        break;
    }
  }
  cout << s;
  return 0;
}