#include <iostream>
#include <vector>
using namespace std;

int kitne(const vector<int>& a, int ind, int n) {
  int cnt = 0;
  for (int i = ind - 1; i <= ind + 1; i++) {
    if (i - 1 >= 0 && i + 1 < n) {
      if ((a[i] > a[i + 1] && a[i] > a[i - 1]) ||
          (a[i] < a[i - 1] && a[i] < a[i + 1]))
        cnt++;
    }
  }
  return cnt;
}

void hn_bhai() {
  int n;
  cin >> n;
  vector<int> a(n);
  for (int i = 0; i < n; i++)
    cin >> a[i];
  int tot = 0;
  for (int i = 1; i < n - 1; ++i) {
    if ((a[i] > a[i + 1] && a[i] > a[i - 1]) ||
        (a[i] < a[i - 1] && a[i] < a[i + 1]))
      tot++;
  }
  int p = 0;
  for (int i = 1; i < n - 1; ++i) {
    int temp = kitne(a, i, n);
    int val = a[i];
    if (i - 1 >= 0) {
      a[i] = a[i - 1];
    }
    p = max(p, temp - kitne(a, i, n));
    if (i + 1 < n)
      a[i] = a[i + 1];
    p = max(p, temp - kitne(a, i, n));
    a[i] = val;
  }
  cout << tot - p << endl;
}

int main() {
  int t;
  cin >> t;
  while (t--)
    hn_bhai();
}