#include <iostream>
using namespace std;

int main() {
  int_least64_t k, n, w;
  cin >> k >> n >> w;

  // Calculate the total cost using the formula
  int_least64_t total_cost = (w * (w + 1) / 2) * k;

  if (total_cost <= n) {
    cout << 0;
  } else {
    cout << total_cost - n;
  }
  
  return 0;
}