#include <iostream>
#include <vector>
#include <cmath>
#include <climits>

void solve();

int main() {
  std::ios_base::sync_with_stdio(false);
  std::cin.tie(NULL);
  std::cout.tie(NULL);
  solve();
  return 0;
}

void solve() {
  int n;
  std::cin >> n;
  std::vector<long long> arr(n);
  for (int i = 0; i < n; i++) {
    std::cin >> arr[i];
    arr[i] -= i;
    if (arr[i] <= 0) {
      std::cout << i + 1 << "\n";
      return;
    }
    arr[i] = ceil(double(arr[i]) / n);
  }
  int mn = INT_MAX, mni;
  for (int i = 0; i < n; i++) {
    if (mn > arr[i]) {
      mn = arr[i];
      mni = i;
    }
  }
  std::cout << mni + 1;
}