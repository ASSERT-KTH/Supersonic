#pragma GCC optimize("O3", "unroll-loops")
#pragma GCC target("avx2")
#include <bits/stdc++.h>
using namespace std;
#define ll long long
const int MAXN = 1005000;
ll n, m, k, ans, sum, a[MAXN], dp[MAXN];

int main() {
  ios::sync_with_stdio(false);
  cin.tie(0);
  cin >> n >> m >> k;
  for (int i = 1; i <= n; i++)
    cin >> a[i];
  for (int i = 1; i <= n; i++) {
    sum = a[i];
    for (int j = i - 1; j >= max(1, i - m); j--) {
      dp[i] = max(dp[i], dp[j] + sum - k);
      sum += a[j];
    }
    ans = max(ans, dp[i]);
  }
  cout << ans;
  return 0;
}