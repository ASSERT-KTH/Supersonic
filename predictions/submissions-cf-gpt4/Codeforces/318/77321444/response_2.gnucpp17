#include <iostream>

using namespace std;

int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    cout.tie(NULL);

    int n, k;
    cin >> n >> k;
    
    int mid = (n + 1) / 2;
    
    if (k <= mid) {
        cout << 2 * k - 1 << '\n';
    } else {
        cout << 2 * (k - mid) << '\n';
    }

    return 0;
}