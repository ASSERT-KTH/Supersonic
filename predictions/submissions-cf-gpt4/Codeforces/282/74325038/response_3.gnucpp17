#include <iostream>
#include <string>
using namespace std;

int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);

    int n, s = 0;
    cin >> n;
    string str;
    while (n--) {
        cin >> str;
        if (str[1] == '+') {
            ++s;
        }
        else if (str[1] == '-') {
            --s;
        }
    }
    cout << s;
    return 0;
}