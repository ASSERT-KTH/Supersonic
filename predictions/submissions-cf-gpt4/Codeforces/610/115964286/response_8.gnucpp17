#include <iostream>
typedef long long ll;

int main() {
  std::ios_base::sync_with_stdio(false);                                            
  std::cin.tie(nullptr);                                                                
  std::cout.tie(nullptr);
  
  ll n;
  std::cin >> n;
  
  if (n % 2 == 0 && n > 4) {
    std::cout << (n / 4);
  } else {
    std::cout << "0";
  }
  
  return 0;
}